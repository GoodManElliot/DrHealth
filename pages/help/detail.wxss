/* 文章详情页面样式 */
.article-detail-container {
  min-height: 100vh;
  background: #f7f8fa;
}

/* 文章头部信息 */
.article-header {
  background: #fff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.article-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  line-height: 1.4;
  margin-bottom: 30rpx;
  text-align: center;
}

/* 文章元信息 */
.article-meta {
  margin-bottom: 30rpx;
}

.meta-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  font-size: 24rpx;
  color: #666;
}

.meta-row:last-child {
  margin-bottom: 0;
}

.author-info {
  display: flex;
  align-items: center;
}

.author-icon {
  font-size: 22rpx;
  margin-right: 8rpx;
}

.author-name {
  color: #333;
  font-weight: 500;
}

.publish-time {
  color: #999;
  font-size: 22rpx;
}

.read-info, .comment-info {
  display: flex;
  align-items: center;
}

.read-icon, .comment-icon {
  font-size: 20rpx;
  margin-right: 6rpx;
}

.read-count, .comment-count {
  color: #666;
}

/* 文章摘要 */
.article-summary {
  background: #f8f9fa;
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  border-left: 6rpx solid #667eea;
}

/* 文章内容 */
.article-content {
  background: #fff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  line-height: 1.8;
}

/* mp-html 内容样式优化 */
.article-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
}

.article-content p {
  margin-bottom: 24rpx;
  text-indent: 0;
}

.article-content h1,
.article-content h2,
.article-content h3,
.article-content h4,
.article-content h5,
.article-content h6 {
  font-weight: 600;
  color: #333;
  margin: 32rpx 0 16rpx 0;
}

.article-content h1 {
  font-size: 36rpx;
}

.article-content h2 {
  font-size: 34rpx;
}

.article-content h3 {
  font-size: 32rpx;
}

.article-content img {
  max-width: 100%;
  height: auto;
  border-radius: 8rpx;
  margin: 20rpx 0;
  display: block;
}

.article-content blockquote {
  background: #f8f9fa;
  border-left: 6rpx solid #667eea;
  padding: 20rpx 24rpx;
  margin: 24rpx 0;
  border-radius: 0 8rpx 8rpx 0;
  color: #666;
  font-style: italic;
}

.article-content ul,
.article-content ol {
  padding-left: 40rpx;
  margin: 20rpx 0;
}

.article-content li {
  margin-bottom: 12rpx;
  line-height: 1.6;
}

.article-content a {
  color: #667eea;
  text-decoration: none;
}

.article-content strong {
  font-weight: 600;
  color: #333;
}

.article-content em {
  font-style: italic;
  color: #666;
}

/* 文章底部操作区 */
.article-footer {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.footer-actions {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  min-width: 120rpx;
}

.action-item:active {
  background: #f8f9fa;
  transform: scale(0.95);
}

.action-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: #666;
}

/* 评论区域样式 */
.comments-section {
  background: #fff;
  margin-bottom: 20rpx;
}

.comments-header {
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.comments-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.comments-list {
  padding: 0 30rpx;
}

.comment-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-avatar {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: #f0f0f0;
  border: 2rpx solid #e5e5e5;
}

.comment-content {
  flex: 1;
  min-width: 0;
}

.comment-user {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.comment-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 12rpx;
  word-break: break-all;
}

.comment-time {
  font-size: 22rpx;
  color: #999;
}

.no-comments {
  padding: 60rpx 30rpx;
  text-align: center;
  color: #999;
  font-size: 26rpx;
}

/* 评论输入框样式 */
.comment-input-container {
  position: sticky;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  background: #fff;
  border-top: 1rpx solid #e5e5e5;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  z-index: 1000;
  box-sizing: border-box;
}

.comment-input-wrapper {
  display: flex;
  align-items: center;
  background: #f7f8fa;
  border-radius: 50rpx;
  padding: 0 20rpx;
}

.comment-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  padding: 0 20rpx;
}

.comment-send-btn {
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 40rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.comment-send-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}

/* 为评论区域添加底部间距，避免被输入框遮挡 */
.comments-section {
  padding-bottom: 120rpx;
}