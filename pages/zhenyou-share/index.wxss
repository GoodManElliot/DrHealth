/* 臻友分享 */
.zhenyou-page { background: #f7f8fa; min-height: 100vh; }

/* 状态栏占位 */
.status-bar {
  background: #fff;
}

/* 自定义导航栏 */
.custom-navbar {
  position: sticky;
  top: 0;
  left: 0;
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  z-index: 999;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.1);
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx 16rpx;
  min-height: 60rpx;
}

.navbar-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.back-btn, .home-btn {
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.back-btn:active, .home-btn:active {
  transform: scale(0.9);
  background: rgba(255, 255, 255, 0.3);
}

.navbar-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #fff;
  letter-spacing: 2rpx;
}

.navbar-right {
  width: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 文章列表样式 */
.list { 
  padding: 20rpx;
}

.article-item { 
  background: #fff; 
  border-radius: 16rpx; 
  margin-bottom: 20rpx; 
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  overflow: hidden;
  transition: all 0.3s ease;
}

.article-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 30rpx rgba(0,0,0,0.12);
}

/* 文章封面 */
.article-cover {
  width: 100%;
  height: 400rpx;
  position: relative;
  overflow: hidden;
}

.cover-image {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}

/* 文章内容 */
.article-content {
  padding: 24rpx;
}

.article-title { 
  font-size: 32rpx; 
  color: #333; 
  font-weight: 600;
  line-height: 1.4;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.article-summary {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 文章元信息 */
.article-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: #999;
}

.meta-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.author-info {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.author-icon {
  font-size: 20rpx;
  margin-right: 8rpx;
}

.author-name {
  color: #666;
  font-size: 22rpx;
}

.publish-time {
  color: #999;
  font-size: 22rpx;
}

.meta-right {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.read-count, .comment-count {
  display: flex;
  align-items: center;
}

.read-icon, .comment-icon {
  font-size: 18rpx;
  margin-right: 6rpx;
}

.loading, .no-more { 
  text-align: center; 
  color: #999; 
  padding: 40rpx 0; 
  font-size: 26rpx;
}
